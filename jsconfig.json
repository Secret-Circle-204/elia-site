{
  "compilerOptions": {
    "typeRoots": [
      "../node_modules/@types",
      "../@types"
    ],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": [
      "es6"
    ],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "noImplicitAny": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
    "app",
    "*.ts",
    "*.tsx",
    "*.js",
    "*.jsx",
    "public",
    "global.d.ts"
, "openai-test"  ]
  //  "exclude": [
  //    "node_modules",
  //    "types"
  //  ],
}